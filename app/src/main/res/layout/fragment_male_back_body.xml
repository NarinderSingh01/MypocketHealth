<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <ImageView
                android:id="@+id/rotate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/round" />



            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="550dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/back" />


            <LinearLayout
                android:id="@+id/upper_head_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_alignTop="@+id/imageView11">

                <View
                    android:id="@+id/left_ear"
                    android:layout_width="10dp"
                    android:layout_height="60dp"
                    />
                <View
                    android:id="@+id/head"
                    android:layout_width="35dp"
                    android:layout_height="60dp"
                    />

                <View
                    android:id="@+id/right_ear"
                    android:layout_width="10dp"
                    android:layout_height="60dp"
                    />

            </LinearLayout>



            <View
                android:id="@+id/neck_or_throat"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/upper_head_layout"
                />

            <View
                android:id="@+id/nape_of_neck"
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/neck_or_throat"
                />

            <LinearLayout
                android:id="@+id/middle_part_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nape_of_neck"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/left_upper_arm"
                        android:layout_width="140dp"
                        android:layout_height="90dp"
                        />

                    <View
                        android:id="@+id/left_elbow"
                        android:layout_width="140dp"
                        android:layout_height="30dp"
                        />

                    <View
                        android:id="@+id/left_forearm"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        />

                    <View
                        android:id="@+id/left_hand"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        />

                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <View
                    android:id="@+id/back"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    />

                <View
                    android:id="@+id/lower_back"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/left_buttocks"
                        android:layout_width="35dp"
                        android:layout_height="60dp"
                        />

                    <View
                        android:id="@+id/anus"
                        android:layout_width="20dp"
                        android:layout_height="60dp"
                        />

                    <View
                        android:id="@+id/right_buttocks"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        />


                </LinearLayout>


            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/right_upper_arm"
                        android:layout_width="140dp"
                        android:layout_height="90dp"
                        />

                    <View
                        android:id="@+id/right_elbow"
                        android:layout_width="140dp"
                        android:layout_height="30dp"
                        />

                    <View
                        android:id="@+id/right_forearm"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        />

                    <View
                        android:id="@+id/right_hand"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        />


                </LinearLayout>


            </LinearLayout>



            <View
                android:id="@+id/thigh"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/middle_part_layout"
                />


            <View
                android:id="@+id/lower_leg"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/thigh"
                />


            <View
                android:id="@+id/foot"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/lower_leg"
                />



        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>

