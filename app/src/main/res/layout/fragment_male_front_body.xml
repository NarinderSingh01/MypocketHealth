<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/rotate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/round" />


            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="550dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/front" />

            <View
                android:id="@+id/head"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/imageView11"
                />


            <View
                android:id="@+id/neck"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/head"
                />


            <LinearLayout
                android:id="@+id/chest_part_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/neck"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">


                <View
                    android:id="@+id/left_upper_arm"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <View
                        android:id="@+id/chest"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        />

                    <View
                        android:id="@+id/upper_abdomen"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

                <View
                    android:id="@+id/right_upper_arm"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    />



            </LinearLayout>


            <LinearLayout
                android:id="@+id/middle_part_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chest_part_layout"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/lest_forearm"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        />

                    <View
                        android:id="@+id/lest_hand"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <View
                        android:id="@+id/middle_abdomen"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        />

                    <View
                        android:id="@+id/lower_abdomen"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <View
                            android:id="@+id/left_thigh"
                            android:layout_width="30dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            />

                        <View
                            android:id="@+id/sexual_organs"
                            android:layout_width="30dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            />

                        <View
                            android:id="@+id/right_thigh"
                            android:layout_width="30dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/right_forearm"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        />

                    <View
                        android:id="@+id/right_hand"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        />

                </LinearLayout>



            </LinearLayout>



            <View
                android:id="@+id/knee"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/middle_part_layout"
                />

            <View
                android:id="@+id/lower_leg"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/knee"
                />

            <View
                android:id="@+id/foot"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/lower_leg"
                />


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>

