<?xml version="1.0" encoding="utf-8"?>
<shape android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Radius of all four corners-->
    <corners
        android:bottomRightRadius="30dp"
        android:bottomLeftRadius="30dp"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp"/>

    <solid android:color="@color/box_orange_color"/>

    <!--Stroke size and color-->
    <stroke android:width="2dp"
        android:color="@color/box_orange_color" />



    <!--Fill Color of the Button-->
    <gradient android:angle="-90"
        android:startColor="@color/box_orange_color"
        android:endColor="@color/box_orange_color"  />

</shape>